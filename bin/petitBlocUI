#!/usr/bin/env python2.7

import sys
import os
import argparse


parser = argparse.ArgumentParser()

parser.add_argument("--mp", action="store_true", help="Use multiprocesing", default=False)
parser.add_argument("-scene", action="store", help="Input .blcs file")
results = parser.parse_args()

try:
    import petitBloc
except:
    sys.path.append(os.path.abspath(os.path.join(__file__, "../../python")))
    import petitBloc


from petitBloc import ui
ui.Show(path=results.sn, multiProcessing=results.mp)
