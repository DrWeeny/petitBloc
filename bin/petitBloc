#!/usr/bin/env python2.7

import sys
import os
import optparse


parser = optparse.OptionParser()
## scene
parser.add_option("-s", "--scene", dest="scene", help="Input .blcs file", action="store", default="")

## running
parser.add_option("-m", "--multiprocess", dest="multiprocess", help="User multiprocess", action="store", default="")

## query
parser.add_option("-i", "--info", dest="info", help="Display infomation of the block (Don't run)", action="store", default="")
parser.add_option("-q", "--query", dest="query", help="Display the contents of the scene (Don't run)", action="store_true", default=False)


opts, _ = parser.parse_args(sys.argv[1:])

try:
    import petitBloc
except:
    sys.path.append(os.path.abspath(os.path.join(__file__, "../../python")))
    import petitBloc


if not opts.scene:
    parser.print_help()
    sys.exit(1)


if not petitBloc.Run(path=opts.scene, multiProcessing=opts.multiprocess, query=opts.query, info=opts.info):
    sys.exit(1)


sys.exit(0)
